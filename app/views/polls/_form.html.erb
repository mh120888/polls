<%= simple_form_for(@poll) do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>
      <ul>
      <% @poll.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :question %><br>

  <h3>Options</h3>

  <%= f.input :answer_type, label: 'Display options as:', collection: ['radio_buttons', 'check_boxes'] %><br>
  <div>
    <%= f.fields_for :options do |option| %><br>
      <%= render 'option_fields', f: option %>
    <% end %>
    <hr>
    <%= link_to_add_association 'Add an option', f, :options %>
  </div>
  <br>
  <br>
  <%= f.submit %>
<% end %>
